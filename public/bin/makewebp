#!/bin/bash
#
# compress and convert! good for web development

mkdir -p compressed

for file in *.jpg; do
    if [ -f "$file" ]; then
        filename=$(basename -- "$file")
        filename_no_ext="${filename%.*}"

        cwebp "$file" -o "compressed/${filename_no_ext}.webp"
    fi
done

for file in *.png; do
    if [ -f "$file" ]; then
        filename=$(basename -- "$file")
        filename_no_ext="${filename%.*}"

        cwebp "$file" -o "compressed/${filename_no_ext}.webp"
    fi
done
